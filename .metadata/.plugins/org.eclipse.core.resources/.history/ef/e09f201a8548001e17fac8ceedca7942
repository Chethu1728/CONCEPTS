package com.kodnest.patterns.javapatterns;

public class P20 {
	public static void pattern(int n) {
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n;j++)
			{
				if(  i==1 || i==n/2 || j==1 || j==n) {
					System.out.print("*");
				}
				else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
		}
}
