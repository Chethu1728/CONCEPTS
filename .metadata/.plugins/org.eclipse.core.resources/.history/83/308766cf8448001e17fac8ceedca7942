package com.kodnest.patterns.javapatterns;

public class P17 {
	public static void pattern(int n)
	{
		for(int i=1;i<=n;i++)
	{
		for(int j=1;j<=n;j++)
		{
			if(i==n/2 || j==n || j==1 || i==1 || i==n) {
				System.out.print("*");
			}
			else {
				System.out.print(" ");
			}
		}
		System.out.println();
	}
	}

}
